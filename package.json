{
  "name": "formula1",
  "version": "1.0.0",
  "description": "GraphQL API for historical and modern Formula 1 era",
  "main": "index.js",
  "author": "simecek.m@seznam.cz",
  "license": "MIT",
  "dependencies": {
    "@graphql-toolkit/file-loading": "^0.9.1",
    "apollo-server": "^2.25.3",
    "apollo-server-express": "^2.14.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "flat": "^5.0.2",
    "graphql": "^14.5.8",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0",
    "mongoose": "5.13.15"
  },
  "scripts": {
    "start": "yarn lint && node server",
    "dev": "nodemon --exec \"yarn lint && node server\"",
    "lint": "eslint ."
  },
  "devDependencies": {
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.2",
    "prettier": "2.1.1"
  },
  "_moduleAliases": {
    "@root": ".",
    "@src": "src",
    "@database": "src/database",
    "@graph": "src/graph"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,gql,json,yml,yaml,md,markdown}": "prettier --write"
  }
}
